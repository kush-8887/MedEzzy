<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/shop-css/cart.css">
    <link rel="stylesheet" href="/css/utils/shop/shop-mobile-nav.css">
    <link rel="stylesheet" href="/css/utils/shop/shop-nav.css">
    <link rel="stylesheet" href="/css/utils/footer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Cart</title>
</head>

<body>
    <!-- mobile-navbar -->
    <%- include("../../partials/shop/mobile-nav.ejs"); %>
    <!-- main navbar -->
    <%- include("../../partials/shop/main-nav.ejs"); %>
    <div id="alertcontSucess" class="alert alert-success" role="alert">
        Cart Updated SuccessFully
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <div class="alert alert-danger alert-danger-visible" role="alert" id="alertcontFail">
        Failed to update cart. Try again!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <div class="page-color">
        <div class="cart-container">
            <div class="cart">
                <div class="cart-headers">
                    <h2 class="main-head" id="cart-head">Cart</h2>
                    <div class="update-cart-cont">
                </div>
                    <button id="update-cart">Update Cart</button>
                </div>
                <div class="cart-items" id="cart-item-cont"></div>
            </div>
            <div class="cart-total">
                <div class="cart-total-decor">
                    <div class="cart-total-container">
                        <div class="sub-head">
                            Cart Total
                        </div>
                        <div id="cart-subtotal-cont" class="cart-totals">
                            <div class="amnt-spacing">
                                Subtotal: <div class="amnt-cont" id="cart-subtotal"></div>
                            </div>
                        </div>
                        <div id="cart-total-cont" class="cart-totals">
                            <div class="amnt-spacing">
                                Total: <div class="amnt-cont" id="cart-total"></div>
                            </div>
                        </div>
                        <div class="check-out-cont">
                            <a href="/checkout">
                                <button id="checkout-btn">
                                    PROCEED TO CHECKOUT
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("../../partials/utils/footer.ejs"); %> 
</body>
<script src="/js/utils/hamburger.js"></script>
<script src="/js/shop-main/cart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>